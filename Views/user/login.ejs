    <%- include('./includes/user-navbar')%>


        <!-- page-title -->
        <section class="page-title centred">
            <div class="pattern-layer" style="background-image: url(user/images/background/page-title.jpg);"></div>
            <div class="auto-container">
                <div class="content-box">
