<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BeYou Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../vendors/feather/feather.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="../js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div class="container-scroller">
        <%- include('./includes/admin-navbar')%>
            <div class="container-fluid page-body-wrapper">
                <%- include('./includes/side-nav')%>

                    <div class="container" style="background-color:#F5F7FF;">
                        <div class="row">
                            
                            <div class="col-md-5 border-right">
                                <div class="row justify-content-center">
                                    <h2 class="mt-5">order Details</h2>
                                </div>
                                <div class="p-2 py-3">
                                    <ul style="font-weight: bold;">
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">orderId</label>
                                                <li class="form-control">
                                                    <%=order._id%>
                                                </li>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">order status</label>
                                                <li class="form-control">
                                                    <%=order.orderStatus%>
                                                </li>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">Customer id</label>
                                                <li class="form-control">
                                                    <%=order.userId%>
                                                </li>
                                            </div>
                                        </div>
                                       
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">payment mode</label>
                                                <li class="form-control">
                                                    <%=order.paymentMode%>
                                                </li>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">payment status</label>
                                                <li class="form-control">
                                                    <%=order.paymentStatus%>
                                                </li>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">Shipping addres</label>
                                                <li class="form-control">
                                                    <%=order.address.name%>

                                                </li>
                                                <li class="form-control">
                                                    <%=order.address.houseName%>, <%=order.address.city%>

                                                </li>
                                                <li class="form-control">
                                                    <%=order.address.state%>
                                                    
                                                </li>
                                                <li class="form-control">
                                                    <%=order.address.pincode%>,&nbsp;Phone:<%=order.address.phoneNumber%>
                                                 
                                                </li>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">product Id and quantity</label>
                                                <%for (let i=0;i<products.length;i++){%>
                                                    <li class="form-control overflow-auto">
                                                        <%=products[i].productId._id%><br>
                                                        <%=products[i].productId.name%><br>
                                                            <%=products[i].price%>,&nbsp;
                                                                <%=products[i].quantity%><br>


                                                    </li>
                                                    <%}%>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">order total</label>
                                                <li class="form-control">
                                                    <%=order.totalAmount%>
                                                </li>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-12"><label class="labels">Discount Amount</label>
                                                <li class="form-control">
                                                    Discount
                                                </li>
                                            </div>
                                        </div>
                                    </ul>
                                    <!-- <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Save Profile</button></div> -->
                                </div>
                            </div>
                            <div class="col-md-5 text-center p-5">
                                <div class="text-center p-5">

                                    <div class="dropdown p-5">
                                        <button class="btn btn-secondary dropdown-toggle" style="font-weight: bold;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                          <%=order.orderStatus%>
                                        </button>
                                        <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuButton">
                                            <% if(order.orderStatus==="pending"){%>
                                          <a href="/admin/approveOrder/<%=order._id%>" class="btn btn-info">Approve</a>
                                          <a href="/admin/cancelOrder/<%=order._id%>" class="btn btn-info">Cancel</a>

                                          <%}else if(order.orderStatus==="Approved"){%>
                                            <a href="/admin/dispatchedOrder/<%=order._id%>" class="btn btn-info" >Dispatched</a>
                                            <%}else if(order.orderStatus==="Dispatched"){%>
                                            <a href="/admin/deliveredOrder/<%=order._id%>" class="btn btn-info">Delivered</a>

                                         <%}
                                         %>
                                        </div>
                                      </div>
                                </div>
                            </div>
                        </div>


                    </div>

            </div>




    </div>
    </div>
    </div>
    <%- include('./includes/script')%>